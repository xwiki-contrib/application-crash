    <property>
      <command>@Usage("XWiki commands")
class xwiki {

  @Usage("execute an XWQL query")
  @Command
  public String xwql(
      @Required
      @Usage("The XWQL query")
      @Argument
      String query)
  {
    context.attributes.services.query.xwql(query).setLimit(100).execute().each() {
      out.println("- ${it}")
    }
    out.println("")
  }

}</command>
