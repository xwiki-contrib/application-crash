  <content>{{velocity}}
#if($hasAdmin)
  #if ($request.action == 'start')
    $services.crash.start()
    #if ($services.crash.isStarted())
      {{info}}$services.localization.render('crash.admin.startSuccess'){{/info}}
    #else
      {{error}}$services.localization.render('crash.admin.startFailure'){{/error}}
    #end
  #elseif ($request.action == 'stop')
    $services.crash.stop()
    #if ($services.crash.isStarted())
      {{error}}$services.localization.render('crash.admin.stopFailure'){{/error}}
    #else
      {{info}}$services.localization.render('crash.admin.stopSuccess'){{/info}}
    #end
  #end

  {{html}}
    $services.localization.render('crash.admin.form.description')
    &lt;form action="$xwiki.requestURL" enctype="multipart/form-data" method="post"&gt;
      &lt;fieldset&gt;
        &lt;input type="hidden" name="form_token" value="$!{services.csrf.getToken()}" /&gt;
        &lt;p&gt;
          &lt;label for="crashStart"&gt;&lt;input id="crashStart" name="action" type="radio" value="start" #if (!$request.action || $request.action == 'start')checked="checked" #end/&gt;$services.localization.render('crash.admin.form.start')&lt;/label&gt;
        &lt;/p&gt;
        &lt;p&gt;
          &lt;label for="crashStop"&gt;&lt;input id="crashStop" name="action" type="radio" value="stop" #if (!$request.action || $request.action == 'stop'))checked="checked" #end/&gt;$services.localization.render('crash.admin.form.stop')&lt;/label&gt;
        &lt;/p&gt;
        &lt;span class="buttonwrapper"&gt;
          &lt;input type="submit" value="$services.localization.render('crash.admin.form.submit')" class="button"/&gt;
        &lt;/span&gt;
      &lt;/fieldset&gt;
    &lt;/form&gt;
  {{/html}}
#else## !$hasAdmin
  {{error}}$services.localization.render('needadminrights').{{/error}}
#end
{{/velocity}}</content>
